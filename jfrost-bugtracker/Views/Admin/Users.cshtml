@model IEnumerable<jfrost_bugtracker.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<h2 style="margin-top:50px">User Administration</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MediaURL)
        </th>*@
        
        <th></th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>
                @user.UserName
            </td>
            
            <td>
                @user.DisplayName
            </td>

            <td>
                @Html.ActionLink("Assign Roles","EditUser", new { Id=user.Id})
            </td>
            
            
        </tr>
    }

</table>

